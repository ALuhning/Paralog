{
    "name": "paralog",
    "version": "0.1.0",
    "private": false,
    "homepage": "https://paralog.azurewebsites.net/index.html",
    "scripts": {
        "build": "npm run build:contract && npm run build:web",
        "build:contract": "node asconfig.js",
        "build:web": "parcel build src/index.html --public-url ./ --no-minify",
        "dev:deploy:contract": "near dev-deploy",
        "deploy:contract": "near deploy",
        "deploy": "npm run build && npm run deploy:contract",
        "prestart": "npm run build:contract",
        "start": "parcel src/index.html ",
        "dev": "nodemon --watch assembly -e ts --exec \"npm run start\"",
        "test": "asp && npm run build:contract && jest test --runInBand"
    },
    "dependencies": {
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@textile/hub": "^0.1.4",
        "@textile/threads": "^0.1.2",
        "@textile/threads-core": "^0.1.18",
        "bootstrap": "^4.5.0",
        "google-maps-react": "^2.0.6",
        "keccak256": "^1.0.0",
        "near-api-js": "^0.25.1",
        "project-name-generator": "^2.1.7",
        "randomcolor": "^0.5.4",
        "react": "^16.13.1",
        "react-bootstrap": "^1.0.1",
        "react-bootstrap-typeahead": "^5.0.0-rc.1",
        "react-copy-to-clipboard": "^5.0.2",
        "react-datepicker": "^2.15.0",
        "react-dom": "^16.13.1",
        "react-icons": "^3.8.0",
        "react-images-upload": "^1.2.8",
        "react-keyframes": "^0.2.3",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.0",
        "react-select": "^3.1.0",
        "regenerator-runtime": "^0.13.5",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.2",
        "tinycolor2": "^1.4.1",
        "tweetnacl": "^1.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@babel/preset-env": "^7.10.2",
        "@babel/preset-react": "^7.10.1",
        "@babel/preset-typescript": "^7.10.1",
        "assemblyscript": "^0.12.2",
        "babel-jest": "^26.0.0",
        "env-cmd": "^10.1.0",
        "jest": "^26.0.1",
        "jest-environment-node": "^26.0.0",
        "near-sdk-as": "^0.4.2",
        "near-shell": "^0.23.1",
        "nodemon": "^2.0.3",
        "parcel-bundler": "^1.12.4",
        "react-test-renderer": "^16.13.1"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/src/__mocks__/fileMock.js"
        },
        "setupFiles": [
            "<rootDir>/src/jest.init.js"
        ],
        "testEnvironment": "near-shell/test_environment",
        "testPathIgnorePatterns": [
            "<rootDir>/assembly/",
            "<rootDir>/node_modules/"
        ]
    },
    "browserslist": {
        "production": [
            "last 2 chrome version",
            "last 2 firefox version",
            "last 2 safari version"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
